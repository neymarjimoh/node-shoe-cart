<br>
{{# if login}}
    {{ else }}
    <div class="custom-alert alert alert-success alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
        </button>
        <strong><h4>Welcome to JimRid</strong>. <small>You are not signed in.</small> </h4>  
    </div>
{{/if}}

{{# each products }}
<br>
    <div class="row">
        {{# each this}}
            <div class="col-sm-6 col-md-4">
                <div class="card" style="width: 80%;">
                    <img src="{{ this.imagePath}}" class="card-img-top img-responsive" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}} <i class="fas fa-star icon"></i></h5>
                        <div class="price">
                                <span class="color-orange">${{ this.price}}</span>
                        </div>
                        <p class="card-text">
                            <div>
                                <label for="quantity1">
                                    <span class="color-orange">Quantity:</span>
                                </label>
                                <input type="number" value="1" name="quantity" id="quantity1">
                            </div>
                        </p>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-success">
                        <i class="fas fa-shopping-cart" aria-hidden="true"></i> Add to Cart</a>
                    </div>
                </div>
            </div>  
        {{/each}}
    </div>
{{/each}}


